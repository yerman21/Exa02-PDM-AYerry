<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardview_01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp">
        <RelativeLayout
            android:id="@+id/relative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="14dp">

            <ImageView
                android:id="@+id/imgv_card01"
                android:src="@drawable/yogurt_yaya_coco"
                android:layout_width="80dp"
                android:layout_height="100dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="12dp" />

            <TextView
                android:id="@+id/et_titulo_card01"
                android:textSize="22dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/imgv_card01"
                android:text="Yogurt Yaya de Coco" />

            <TextView
                android:id="@+id/et_precio_card01"
                android:textSize="20dp"
                android:textStyle="italic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/imgv_card01"
                android:layout_below="@+id/et_titulo_card01"
                android:text="Precio: 20"/>

            <TextView
                android:id="@+id/et_stock_card01"
                android:textSize="20dp"
                android:textStyle="italic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/imgv_card01"
                android:layout_below="@+id/et_precio_card01"
                android:text="Cantidad: 50"/>

            <ImageButton
                android:id="@+id/imgbtn_agregar_card01"
                android:layout_width="50dp"
                android:layout_height="100dp"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/et_titulo_card01"
                android:background="@color/colorPrimary"
                android:src="@drawable/ic_mas"
                android:padding="2dp"
                android:scaleType="fitCenter"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>


</android.support.constraint.ConstraintLayout>